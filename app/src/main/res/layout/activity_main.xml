<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.krein.chandratya.chandratya_1202154143_studycase4.MainActivity">

    <Button
        android:id="@+id/tmpl_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:onClick="tampilNama"
        android:text="Tampil Nama" />

    <Button
        android:id="@+id/cari_gambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/tmpl_nama"
        android:layout_alignRight="@+id/tmpl_nama"
        android:layout_below="@+id/tmpl_nama"
        android:layout_marginTop="48dp"
        android:onClick="tampilGambar"
        android:text="Cari Gambar" />


</RelativeLayout>